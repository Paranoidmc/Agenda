# ==========================================
# CONFIGURAZIONE PRODUZIONE - Laravel Backend
# https://api.edilcipriano.peels.it
# ==========================================

APP_NAME=Agenda
APP_ENV=production
APP_KEY=base64:GENERA_UNA_NUOVA_KEY_CON_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://api.edilcipriano.peels.it

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=agenda
DB_USERNAME=root
DB_PASSWORD=PASSWORD_SICURA

# Session - IMPORTANTE per funzionare con frontend SPA
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.edilcipriano.peels.it
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=none

# Cache
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# CORS - Domini permessi (già configurato in config/cors.php)
CORS_ALLOWED_ORIGINS=https://edilcipriano.peels.it,https://attivita.edilcipriano.peels.it

# Sanctum - Domini stateful (già configurato in config/sanctum.php)
SANCTUM_STATEFUL_DOMAINS=edilcipriano.peels.it,attivita.edilcipriano.peels.it

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@edilcipriano.peels.it"
MAIL_FROM_NAME="${APP_NAME}"
